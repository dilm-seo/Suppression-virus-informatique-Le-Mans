---
const links = [
  { href: '/', text: 'Accueil' },
  { href: '/services', text: 'Services' },
  { href: '/tarifs', text: 'Tarifs' },
  { href: '/contact', text: 'Contact' }
];
---
<nav class="nav">
  <ul class="nav-list">
    {links.map(link => (
      <li>
        <a href={link.href} class="nav-link">{link.text}</a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .nav-list {
    display: flex;
    gap: 2rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .nav-link {
    color: #333;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
  }
  .nav-link:hover {
    color: var(--accent);
  }
</style>