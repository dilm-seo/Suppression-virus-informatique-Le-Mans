---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---
<div class:list={['card', className]}>
  <slot />
</div>

<style>
  .card {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    transition: transform 0.3s;
  }
  .card:hover {
    transform: translateY(-5px);
  }
</style>